<section class="our-work-content">
  <div class="container">
    <div class="row">
    <h1 class="text-center">Contact Us</h1>
      <div class="col-md-6 col-sm-12">
        <div class="contact-form">
          
          <%= form_for(:contact, url: contact_path) do |f| %>
            <div class="row">
              <div class="comment-box"></div>
              <div class="col-md-6 form-group">
               <%= f.text_field :name, class: "form-control", placeholder: "Name", type:"text", required: :true%>
              </div> 
              <div class="col-md-6 form-group">
                <%= f.text_field :email, class: "form-control", placeholder: "Email", type:"text", required: :true%>
              </div>
              <label class="col-md-12 control-label" for="textarea"></label>

              <div class="col-md-12">
                <%= f.text_area :message, class: "form-control", id: "textarea", required: :true%>
              </div>
              <div class="col-md-8 text-left">
               <%= f.submit "send message", class: "btn btn btn-warning"%>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-6 col-sm-12">
        <div class="contact-add-box">
          <ul class="address-details">
            <h3>Our Address</h3>
            <li><i class="glyphicon glyphicon-map-marker"></i> M14, HeyDay Technologies Mangal </li>
             <li class="address">Nagar Road Indore, Madhya Pradesh India.</li>
            <li><i class="fa fa-phone"></i> +91 14344 </li>
            <li><i class="glyphicon glyphicon-envelope"> </i>hello@heydaytechnologies.com</li>
          </ul>
        </div>
      </div>
      <div id="map"></div>
    </div>
  </div>
</section>

<script>
  function initMap() { 
    var uluru = {lat: 22.685712, lng: 75.8597045};
    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 15,
      center: uluru
    });
    
    var marker = new google.maps.Marker({
      position: uluru,
      map: map
    });
    var infowindow = new google.maps.InfoWindow();
    var service = new google.maps.places.PlacesService(map);
      service.getDetails({
        placeId: 'ChIJ2QkpKPH8YjkRaHR6Jih5hIw'
      }, 
      function(place, status) {
        if (status === google.maps.places.PlacesServiceStatus.OK) {
          var marker = new google.maps.Marker({
            map: map,
            position: place.geometry.location
          });
          google.maps.event.addListener(marker, 'click', function() {
            infowindow.setContent('<div><strong>' + place.name + '</strong><br>' +
              'Place ID: ' + place.place_id + '<br>' +
              place.formatted_address + '</div>');
            infowindow.open(map, this);
          });
        }
      });
    }
  
</script>
<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB8LdHtj702KCU9rC9oSH2CshQABhHS5J0&callback=initMap&libraries=places">
</script>
